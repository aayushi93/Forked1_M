pipeline {
    agent any

    environment {
        app_name = 'jarvis-trading-app'
        MAVEN_HOME = '/var/jenkins_home/maven'
    }

    stages {
        stage('artifactory setup') {
            steps {
                rtServer(
                  id: 'Artifactory',
                  url: 'http://artifactory:8081/artifactory/',
                  credentialsId: 'jenkins-artifactory',
                )

                rtMavenDeployer(
                  id: 'MAVEN_DEPLOYER',
                  serverId: 'Artifactory',
                  releaseRepo: 'trading-app-repo',
                  snapshotRepo: 'trading-app-repo',
                )
            }
        }
        stage('build-master') {
            when { branch 'master' }
            steps {
                echo 'Master branch'
                rtMavenRun(
                    pom: 'springboot/pom.xml',
                    goals: '-DskipTests versions:set -DremoveSnapshot clean install',
                    deployerId: 'MAVEN_DEPLOYER',
                )
            }
        }
        stage('build-dev') {
            when { branch 'develop' }
            steps {
                echo 'Development branch'
                rtMavenRun(
                    pom: 'springboot/pom.xml',
                    goals: '-DskipTests clean install',
                    deployerId: 'MAVEN_DEPLOYER',
                )
            }
        }

    }
}
